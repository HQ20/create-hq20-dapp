{
    "name": "client",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "eject": "react-scripts eject",
        "test": "react-scripts test",
        "test:ci": "CI=true react-scripts test --env=jsdom",
        "lint": "tslint -c tslint.json 'src/**/*.ts'",
        "coverage": "react-scripts test --env=jsdom --coverage",
        "coverage:ci": "CI=true react-scripts test --env=jsdom --coverage && cat coverage/lcov.info",
        "debug:chrome": "google-chrome --remote-debugging-port=9222",
        "docs": "typedoc --out docs ./src",
        "link-contracts": "run-script-os",
        "link-contracts:linux:darwin": "cd src && ln -s ../../ethereum/build/contracts contracts",
        "link-contracts:win32": "cd src && mklink \\D contracts ..\\..\\ethereum\\build\\contracts"
    },
    "dependencies": {
        "@types/jest": "24.0.15",
        "@types/node": "12.6.1",
        "@types/react": "16.8.23",
        "@types/react-dom": "16.8.4",
        "@types/react-router-dom": "4.3.4",
        "bignumber.js": "9.0.0",
        "react": "16.8.6",
        "react-dom": "16.8.6",
        "react-router-dom": "5.0.1",
        "react-scripts": "3.0.1",
        "truffle-contract": "4.0.23",
        "typescript": "3.4.5",
        "web3": "1.0.0-beta.37"
    },
    "devDependencies": {
        "@types/enzyme": "3.10.2",
        "@types/enzyme-adapter-react-16": "1.0.5",
        "coveralls": "3.0.4",
        "delay": "4.3.0",
        "enzyme": "3.10.0",
        "enzyme-adapter-react-16": "1.14.0",
        "eslint": "5.16.0",
        "eslint-config-airbnb": "17.1.1",
        "eslint-plugin-import": "2.18.0",
        "eslint-plugin-jsx-a11y": "6.2.3",
        "eslint-plugin-react": "7.14.2",
        "jest": "24.7.1",
        "portscanner": "2.2.0",
        "run-script-os": "1.0.7",
        "tslint": "5.18.0",
        "tslint-react": "4.0.0",
        "typedoc": "0.14.2",
        "typescript-tslint-plugin": "0.5.3"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.{ts,tsx}",
            "!./node_modules/",
            "!src/App.tsx",
            "!src/*.{ts,tsx}",
            "!src/utils/**.ts"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
