{
    "extends": [
        "tslint:recommended",
        "tslint-react"
    ],
    "rules": {
        "max-line-length": {
            "options": [
                120
            ]
        },
        "indent": [
            true,
            "spaces",
            4
        ],
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": {
            "severity": "warning",
            "options": [
                "debug",
                "info",
                "log",
                "time",
                "timeEnd",
                "trace"
            ]
        },
        "jsx-wrap-multiline": false,
        "quotemark": [true, "single", "jsx-double"]
    },
    "jsRules": {
        "max-line-length": {
            "options": [
                120
            ]
        }
    },
    "linterOptions": {
        "exclude": [
            "src/react-app-env.d.ts",
            "src/serviceWorker.ts"
        ]
    }
}
