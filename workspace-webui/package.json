{
    "name": "workspace-webui",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "eject": "react-scripts eject",
        "test": "jest --testTimeout 20000",
        "test:ci": "CI=true jest --testTimeout 20000 --env=jsdom",
        "lint": "tslint -c tslint.json 'src/**/*.ts'",
        "coverage": "jest --testTimeout 20000 --env=jsdom --coverage",
        "coverage:ci": "CI=true jest --testTimeout 20000 --env=jsdom --coverage && cat coverage/lcov.info | coveralls",
        "debug:chrome": "google-chrome --remote-debugging-port=9222",
        "docs": "typedoc --out docs ./src"
    },
    "dependencies": {
        "@types/node": "13.1.6",
        "@types/react": "16.9.17",
        "@types/react-dom": "16.9.4",
        "@types/react-router-dom": "5.1.3",
        "cross-env": "6.0.3",
        "ethers": "4.0.43",
        "react": "16.12.0",
        "react-dom": "16.12.0",
        "react-router-dom": "5.1.2",
        "react-scripts": "3.2.0",
        "typescript": "3.7.4",
        "workspace-blockchain": "file:../workspace-blockchain/"
    },
    "devDependencies": {
        "@babel/preset-typescript": "^7.8.0",
        "@types/enzyme": "3.10.4",
        "@types/enzyme-adapter-react-16": "1.0.5",
        "@types/jest": "24.0.25",
        "@types/node": "13.1.6",
        "delay": "4.3.0",
        "enzyme": "3.11.0",
        "enzyme-adapter-react-16": "1.15.2",
        "jest": "24.9.0",
        "ts-jest": "24.3.0",
        "tslint": "5.20.1",
        "tslint-react": "4.1.0",
        "typedoc": "0.16.4",
        "typescript": "3.7.4",
        "typescript-tslint-plugin": "0.5.5",
        "coveralls": "3.0.9"
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.{ts,tsx}",
            "!./node_modules/",
            "!src/App.tsx",
            "!src/*.{ts,tsx}",
            "!src/utils/**.ts"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
